<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme"
    tools:context="com.example.kimteaho.copy.FileViewActivity">

 

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:id="@+id/txt_file_subjectn"
        android:padding="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textSize="18sp"
        android:background="#ff29b1d7"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txt_file_subjectn"
        android:fillViewport="true">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/list_file"
            android:divider="#00000000"
            android:dividerHeight="5dp">

            </ListView>
        </ScrollView>


</RelativeLayout>
