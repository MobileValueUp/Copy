<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kimteaho.copy.LoginActivity"
>

    // 타이틀바 형태

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:id="@+id/titlebar_sign"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:src="@drawable/titlebar"
        />

    // 뒤로가기 버튼

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/backprint"
        android:src="@drawable/btnback_unclicked"
        android:background="@null"
        />

    // 한페이지2면 문구

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_page2"
        android:text="한 페이지에 2면"
        android:textSize="12sp"
        android:textColor="#A09F9F"
        android:layout_below="@+id/titlebar_sign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"

        />

    // 한페이지2면 버튼

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page2_1"
        android:src="@drawable/setting_height_2_1_unchecked"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_page2"
        android:layout_marginTop="16dp"
        />


    // 한페이지4면 문구

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_page4"
        android:text="한 페이지에 4면"
        android:textSize="12sp"
        android:textColor="#A09F9F"
        android:layout_below="@+id/page2_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        />

    // 한페이지4면 버튼

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page4_1"
        android:src="@drawable/setting_height_4_1_unchecked"
        android:background="@null"
        android:layout_below="@+id/txt_page4"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="33dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page4_2"
        android:src="@drawable/setting_height_4_2_unchecked"
        android:background="@null"
        android:layout_alignTop="@+id/page4_1"
        android:layout_toEndOf="@+id/page4_1"
        android:layout_marginLeft="9dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page4_3"
        android:src="@drawable/setting_height_4_3_unchecked"
        android:background="@null"
        android:layout_alignTop="@+id/page4_2"
        android:layout_toEndOf="@+id/page4_2"
        android:layout_marginLeft="9dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page4_4"
        android:src="@drawable/setting_height_4_4_unchecked"
        android:background="@null"
        android:layout_alignTop="@+id/page4_3"
        android:layout_toEndOf="@+id/page4_3"
        android:layout_marginLeft="9dp"
        />

    // 한페이지6면 문구

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_page6"
        android:text="한 페이지에 6면"
        android:textSize="12sp"
        android:textColor="#A09F9F"
        android:layout_below="@+id/page4_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        />


    // 한페이지6면 버튼

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page6_1"
        android:src="@drawable/setting_height_6_1_unchecked"
        android:background="@null"
        android:layout_below="@+id/txt_page6"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="33dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page6_2"
        android:src="@drawable/setting_height_6_2_unchecked"
        android:background="@null"
        android:layout_alignTop="@+id/page6_1"
        android:layout_toEndOf="@+id/page6_1"
        android:layout_marginLeft="9dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page6_3"
        android:src="@drawable/setting_height_6_3_unchecked"
        android:background="@null"
        android:layout_alignTop="@+id/page6_2"
        android:layout_toEndOf="@+id/page6_2"
        android:layout_marginLeft="9dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page6_4"
        android:src="@drawable/setting_height_6_4_unchecked"
        android:background="@null"
        android:layout_alignTop="@+id/page6_3"
        android:layout_toEndOf="@+id/page6_3"
        android:layout_marginLeft="9dp"
        />


    // 넘어가기 버튼

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/btn_next"
        android:src="@drawable/page_next_unchecked"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/page6_4"
        android:layout_marginTop="50dp"/>


</RelativeLayout>
