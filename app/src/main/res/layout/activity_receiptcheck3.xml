<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="300dp"
    tools:context="com.example.kimteaho.copy.LoginActivity">

    // 타이틀바 형태

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:id="@+id/titlebar_sign"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:src="@drawable/titlebar"
        />

    // 뒤로가기 버튼

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/btnBackSign"
        android:src="@drawable/btnback_unclicked"
        android:background="@null"/>

    // 타이틀바 이름
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수령확인"
        android:id="@+id/txt_title_name"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="110dp"
        android:layout_centerHorizontal="true"
        />

    //수령 배경

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:id="@+id/bg_receipt"
        android:background="@drawable/bg_list"
        android:layout_below="@+id/titlebar_sign"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/btnBackSign"
        android:layout_marginRight="10dp" />

    //과목명

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subject_name"
        android:text="경제경영수학"
        android:textSize="12sp"
        android:textColor="#FF863E"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/bg_receipt"
        android:layout_marginTop="20dp"
         />

    //파일명

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_name"
        android:text="Ch.8 Linear Algebra.hwp"
        android:textSize="16sp"
        android:textColor="#A09F9F"
        android:layout_below="@+id/subject_name"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true" />

    //수령확인여부

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_done_receipt"
        android:text="수령완료"
        android:textSize="29sp"
        android:textColor="#000000"
        android:layout_below="@+id/file_name"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true" />

    //수령확인

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_check"
        android:src="@drawable/button_done_unclicked"
        android:background="@null"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
