<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.kimteaho.copy.SignupActivity"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#f7f6f3">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:id="@+id/titlebar_sign"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="0dp"
            android:src="@drawable/titlebar" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnBackSign"
            android:src="@drawable/btnback"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:id="@+id/txt_sign_title"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/btnBackSign"
            android:layout_marginLeft="112dp" />
        //이름
        <ImageView
            android:layout_width="340dp"
            android:layout_height="66dp"
            android:id="@+id/bg_sign_name"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/edttext_signup"
            />
        <TextView
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_name"
            android:layout_alignLeft="@+id/bg_sign_name"
            android:layout_alignTop="@+id/bg_sign_name"
            android:layout_marginTop="24dp"
            android:text="이름:"
            android:textSize="14sp"
            android:textColor="#6a6868"
            />
        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_sign_name"
            android:layout_toEndOf="@+id/txt_sign_name"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/bg_sign_name"
            android:layout_marginTop="22dp"
            android:background="@null"
            android:textColor="#ff863e"
            android:textSize="16sp"/>
    // 이메일
        <ImageView
            android:layout_width="340dp"
            android:layout_height="66dp"
            android:id="@+id/bg_sign_email"
            android:src="@drawable/edttext_signup"
            android:layout_below="@+id/bg_sign_name"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_email"
            android:layout_alignLeft="@+id/bg_sign_email"
            android:layout_alignTop="@+id/bg_sign_email"
            android:layout_marginTop="24dp"
            android:text="이메일:"
            android:textSize="14sp"
            android:textColor="#6a6868"
            />
        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_sign_email"
            android:layout_toEndOf="@+id/txt_sign_email"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/bg_sign_email"
            android:layout_marginTop="22dp"
            android:background="@null"
            android:textColor="#ff863e"
            android:textSize="16sp"/>
    //비밀번호
        <ImageView
            android:layout_width="340dp"
            android:layout_height="66dp"
            android:id="@+id/bg_sign_pwd"
            android:src="@drawable/edttext_signup"
            android:layout_below="@+id/bg_sign_email"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_pwd"
            android:layout_alignLeft="@+id/bg_sign_pwd"
            android:layout_alignTop="@+id/bg_sign_pwd"
            android:layout_marginTop="24dp"
            android:text="비밀번호:"
            android:textSize="14sp"
            android:textColor="#6a6868"
            />
        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_sign_pwd"
            android:layout_toEndOf="@+id/txt_sign_pwd"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/bg_sign_pwd"
            android:layout_marginTop="22dp"
            android:background="@null"
            android:textColor="#ff863e"
            android:textSize="16sp"
            android:inputType="textPassword"/>

        //비밀번호 확인
        <ImageView
            android:layout_width="340dp"
            android:layout_height="66dp"
            android:id="@+id/bg_sign_pwdcheck"
            android:src="@drawable/edttext_signup"
            android:layout_below="@+id/bg_sign_pwd"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_pwdcheck"
            android:layout_alignLeft="@+id/bg_sign_pwdcheck"
            android:layout_alignTop="@+id/bg_sign_pwdcheck"
            android:layout_marginTop="24dp"
            android:text="번호확인:"
            android:textSize="14sp"
            android:textColor="#6a6868"
            />
        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_sign_pwdcheck"
            android:layout_toEndOf="@+id/txt_sign_pwdcheck"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/bg_sign_pwdcheck"
            android:layout_marginTop="22dp"
            android:background="@null"
            android:textColor="#ff863e"
            android:textSize="16sp"
            android:inputType="textPassword"/>

        // 학번
        <ImageView
            android:layout_width="140dp"
            android:layout_height="66dp"
            android:id="@+id/bg_sign_student_number"
            android:src="@drawable/edttext_signup"
            android:layout_below="@+id/bg_sign_pwdcheck"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_student_number"
            android:layout_alignLeft="@+id/bg_sign_student_number"
            android:layout_alignTop="@+id/bg_sign_student_number"
            android:layout_marginTop="24dp"
            android:text="학번:"
            android:textSize="14sp"
            android:textColor="#6a6868"
            />
        <Spinner
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_student_number"
            android:layout_toEndOf="@id/txt_sign_student_number"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/txt_sign_student_number"
            android:spinnerMode="dropdown"/>

        //학교

        <TextView
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_school"
            android:layout_alignLeft="@+id/bg_sign_pwdcheck"
            android:layout_below="@+id/bg_sign_student_number"
            android:layout_marginTop="24dp"
            android:text="학교:"
            android:textSize="14sp"
            android:textColor="#6a6868"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_school_select"
            android:layout_toEndOf="@+id/txt_sign_school"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/bg_sign_student_number"
            android:layout_marginTop="22dp"
            android:text="광운대학교"
            android:textSize="16sp"
            android:textColor="#ff863e"/>
        //학교검색
        <ImageView
            android:layout_width="294dp"
            android:layout_height="48dp"
            android:id="@+id/bg_sign_school_search"
            android:src="@drawable/bg_signup"
            android:layout_alignLeft="@+id/txt_sign_school"
            android:layout_below="@+id/txt_sign_school"
            android:layout_marginTop="18dp"/>

        <ImageButton
            android:layout_width="46dp"
            android:layout_height="48dp"
            android:id="@+id/btn_school_search"
            android:src="@drawable/searchicon_signup"
            android:background="@null"
            android:layout_toEndOf="@+id/bg_sign_school_search"
            android:layout_alignTop="@+id/bg_sign_school_search"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_school_search"
            android:layout_alignLeft="@+id/bg_sign_school_search"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/bg_sign_school_search"
            android:layout_marginTop="18dp"
            android:text="학교검색"
            android:textSize="14sp"
            android:textColor="#b4b3b3"
            android:gravity="left"/>

        //약관
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_policy"
            android:layout_alignLeft="@+id/bg_sign_pwdcheck"
            android:layout_below="@+id/bg_sign_school_search"
            android:layout_marginTop="32dp"
            android:text="약관동의"
            android:textSize="14sp"
            android:textColor="#6a6868"/>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="96dp"
            android:id="@+id/bg_policy"
            android:src="@drawable/bg_signup"
            android:layout_below="@+id/txt_sign_policy"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/txt_sign_policy"/>
        
        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/sign_checkbox"
            android:src="@drawable/uncheck_signup"
            android:background="@null"
            android:layout_below="@+id/bg_policy"
            android:layout_marginTop="6dp"
            android:layout_alignRight="@+id/bg_policy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sign_agree"
            android:layout_toStartOf="@+id/sign_checkbox"
            android:layout_marginRight="6dp"
            android:layout_below="@+id/bg_policy"
            android:layout_marginTop="16dp"
            android:text="동의합니다."
            android:textColor="#6a6868"
            android:textSize="14sp"/>


        //가입 버튼
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:id="@+id/btn_sign_signup"
            android:src="@drawable/btnsignup"
            android:background="@null"
            android:layout_below="@+id/sign_checkbox"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="105dp"/>
    </RelativeLayout>
</ScrollView>
