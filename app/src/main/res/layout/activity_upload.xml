<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kimteaho.copy.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputId"
        android:layout_alignParentStart="true"
        android:layout_marginTop="105dp"
        android:layout_alignEnd="@+id/inputPwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/inputPwd"
        android:layout_below="@+id/inputId"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/upload_back"
        android:layout_below="@+id/inputPwd"
        android:layout_alignEnd="@+id/inputPwd"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/upload_button"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/upload_back"
        android:layout_alignEnd="@+id/inputPwd" />

</RelativeLayout>
